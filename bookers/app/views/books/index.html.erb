<div class="index">
<!--一覧画面-->
<h1>Books</h1>

<!--データベースの情報をテーブルに表示する-->
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.body %></td>
      <td><%= book.title %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
      <td><%= link_to "destroy", book_path(book.id),method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<!--投稿機能-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'create books' %>
<% end %>

<!--サクセスメッセージ-->
<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<!--エラーメッセージ エラーあり-->
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラー
<ul>
  <%= @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

</div>